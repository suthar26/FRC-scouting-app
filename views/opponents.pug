doctype html
html
    head
        title Opponents
        link(rel='stylesheet', href='/assets/generated-css/stylesheet.css')
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
        script(src='/javascripts/jquery-3.0.0.min.js')

    body.none.fill(style='background-image: url(../assets/pictures/circuit.png);')#body
        div.f-center(style='width:100%')
          .topnav
            div.f-center.heading(style='width:100%')
              h2 FRC Scouting
            div.f-left(style='width:5%;')
              p.grid-width=('')
            a(href='/') Home
            a(href='/scouting/MatchSchedule') Match Schedule
            a(href='/scouting/hangRank') Ranking
            a.active(href='/scouting/opponents?teamNumber=188') Opponents of 188
        div.spacing
        div.f-center.page.mdc-card.margin-v-b.padding-b(style='width:90%')
            h1=red.title
        div.f-left(style='width:5%;')
            p.grid-width=('')
        div.f-left.page.mdc-card.margin-v-b.padding-b(style='width: 90%')
            div
                each title, i in red.columns
                    if (i <= 0)
                        p.grid-width.f-left.center(style='background: #ddd')=title
                    if (i > 0)
                        p.grid-width.f-left.center(style='background: #2962FF')=title
                    
                .clear
                each match, index in red.schedule
                    .no-decor.grid-height
                        each val, field in match
                            if (field === 'matchNumber')
                                a.no-decor.f-left.center.grid-item.matchNum(href='/scouting/pitStrat?matchNumber=' + val)=val+''
                            if (field != 'matchNumber') 
                                a.no-decor.f-left.center.grid-item.blueTeams(href='/scouting/viewTeam?teamNumber=' + val)=val+''
                .clear

        .clear
        div.f-center.page.mdc-card.margin-v-b.padding-b(style='width:90%')
            h1=blue.title
        div.f-left(style='width:5%;')
            p.grid-width=('')
        div.f-left.page.mdc-card.margin-v-b.padding-b(style='width: 90%')
            div
                each title, i in blue.columns
                    if (i <= 0)
                        p.grid-width.f-left.center(style='background: #ddd')=title
                    if (i > 0)
                        p.grid-width.f-left.center(style='background: #B71C1C')=title
                    
                .clear
                each match, index in blue.schedule
                    .no-decor.grid-height
                        each val, field in match
                            if (field === 'matchNumber')
                                a.no-decor.f-left.center.grid-item.matchNum(href='/scouting/pitStrat?matchNumber=' + val)=val+''
                            if (field != 'matchNumber')
                                a.no-decor.f-left.center.grid-item.redTeams(href='/scouting/viewTeam?teamNumber=' + val)=val+''
                .clear

        .clear

        style(type='text/css').
            .matchNum{
                color: black;
            }
            .redTeams{
              background: #F44336;
              color: black;
            }
            .blueTeams{
              background: #2196F3;
              color: black;
            }
            .red{
                background: #FF5252;
                color: white;
            }
            .blue{
                background: #448aff;
                color: white;
            }
            .grid-width{
                width: 24%;
            }
            .grid-height{
                height: 40px;
            }
            .grid-item{
                width: 24%;
                height: 40px;
            }
            a{
                background-color: #dddddd;
                border: black;
                height: 100px;
                width: 150px;
                padding: 3px;
                display: inline;
                font-size: 16px;
                cursor: pointer;
            }
            p {
                width:150px;
                padding:3px;
                font-size: 16px;
            }

script(src='scripts/material-components-web.js')
        script.
            mdc.autoInit()
